#!/bin/bash
if [[ "$*" == *"api/chat"* ]]; then
    cat << 'RESPONSE'
{
    "response": "Running Python script in src directory",
    "operations": [
        {
            "type": "command",
            "command": "pwd > location.txt && python test.py > output.txt 2>&1",
            "working_dir": "project/src"
        }
    ]
}
RESPONSE
else
    /usr/bin/curl "$@"
fi
